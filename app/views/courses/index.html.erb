<h1>Lista de cursos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Intensidad</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.intensity %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Iniciar curso', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
         <td><%= link_to 'Agregar unidades del curso', new_course_unit_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

